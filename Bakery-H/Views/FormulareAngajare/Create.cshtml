@model Bakery_Homework.Models.FormulareAngajare

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<head>
    <link rel="stylesheet" href="@Url.Content("~/css/join-team-page.css")">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<div class="page-content">
    <div class="left-part">
        <img src="~/icons/join-page-img.jpg" alt="Join">
    </div>

    <div class="right-part">
        <div class="right-part-content">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
            <div class="container mt-5 d-flex justify-content-center">
                <div class="col-md-8">
                    <div class="card p-12">
                        <div class="card-header">
                            <h3 class="text-center">Employment Application Form</h3>
                        </div>
                        <div class="card-body">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <label asp-for="Prenume" class="control-label">First name <span class="text-danger">*</span></label>
                                    <input asp-for="Prenume" class="form-control" />
                                    <span asp-validation-for="Prenume" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Nume" class="control-label">Last name <span class="text-danger">*</span></label>
                                    <input asp-for="Nume" class="form-control" />
                                    <span asp-validation-for="Nume" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="DataNasterii" class="control-label">Date of birth <span class="text-danger">*</span></label>
                                    <input asp-for="DataNasterii" class="form-control" type="date" />
                                    <span asp-validation-for="DataNasterii" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="NumarTelefon" class="control-label">Phone number <span class="text-danger">*</span></label>
                                    <input asp-for="NumarTelefon" class="form-control" type="tel" />
                                    <span asp-validation-for="NumarTelefon" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Email" class="control-label">Email <span class="text-danger">*</span></label>
                                    <input asp-for="Email" class="form-control" type="email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="LocatieId" class="control-label">Please select a city <span class="text-danger">*</span></label>
                                    <select asp-for="LocatieId" class="form-control" asp-items="ViewBag.LocatieId">
                                    </select>
                                    <span asp-validation-for="LocatieId" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary btn-block" />
                                </div>

                                <div id="successMessage" class="alert alert-success" style="display: none;">
                                    Form submitted successfully!
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>